{
  "name": "ops-sim",
  "version": "1.0.0",
  "description": "Resilient Space Command, Telemetry, and Tracking System - Anduril Practice Project",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:integration": "jest --testPathPattern=integration",
    "test:scenarios": "jest --testPathPattern=scenarios",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "kafka:up": "docker compose up -d",
    "kafka:down": "docker compose down",
    "kafka:logs": "docker compose logs kafka",
    "kafka:verify": "node dist/scripts/verify-kafka.js",
    "kafka:topics": "docker exec ops-sim-kafka-1 kafka-topics --bootstrap-server localhost:9092 --list",
    "example:producer": "node dist/examples/producer.js",
    "example:consumer": "node dist/examples/consumer.js",
    "chaos:high": "CHAOS_DROP_RATE=0.3 npm run example:consumer",
    "chaos:low": "CHAOS_DROP_RATE=0.05 npm run example:consumer"
  },
  "keywords": [
    "distributed-systems",
    "kafka",
    "space-operations",
    "chaos-engineering",
    "anduril"
  ],
  "author": "Darshan Gupta",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "kafkajs": "^2.2.4",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}